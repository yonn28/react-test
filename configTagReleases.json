{
    "scheme": "custom",
    "schemeDefinition": "major.minor[.build][->alpha]",
    "versionFile": "./package.json",
    "files": [],
    "rules": [
      {
        "trigger": "manual",
        "bump": "major",
        "branch": "master",
        "reset": "build"
      },
      {
        "trigger": "manual",
        "bump": "minor",
        "branch": "staging",
        "reset": "build",
        "tag": false
      },
      {
        "trigger": "commit",
        "bump": "alpha",
        "branch": "qa",
        "reset": "build",
        "tag": false
      }
    ]
  }