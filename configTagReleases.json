{
    "scheme": "custom",
    "schemeDefinition": "major.minor[.build][->alpha]",
    "versionFile": "./package.json",
    "files": [],
    "rules": [
      {
        "branch": "master",
        "bump": "major",
        "reset": "alpha",
        "trigger": "manual"
      },
      {
        "branch": "staging",
        "bump": "minor",
        "tag": false,
        "trigger": "manual"
      },
      {
        "branch": "qa",
        "bump": "alpha",
        "tag": false,
        "trigger": "commit"
      }
    ]
  }