{
    "scheme": "custom",
    "schemeDefinition": "major.minor[.build][->alpha]",
    "versionFile": "./package.json",
    "files": [],
    "rules": [
      {
        "trigger": "commit",
        "bump": "build"
      },
      {
        "trigger": "commit",
        "bump": "major",
        "branch": "master",
        "reset": "build"
      },
      {
        "trigger": "commit",
        "bump": "build",
        "branch": "release",
        "reset": [
          "minor",
          "build"
        ]
      },
      {
        "trigger": "commit",
        "bump": "major",
        "branch": "fix-version",
        "reset": [
          "minor",
          "build"
        ]
      }
    ]
  }